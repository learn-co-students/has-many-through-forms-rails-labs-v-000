<%= form_for post do |f| %>
  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label "Content" %><br>
  <%= f.text_area :content %><br><br>

	<%= f.label "Select Category:" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

	<%= f.label "or create new Category:" %><br>
  <%= f.fields_for :categories, post.categories.build do |c| %>
    <%= c.text_field :name %>
  <% end %><br>

  <%= f.submit %>
<% end %>
