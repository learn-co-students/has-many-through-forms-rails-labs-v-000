<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<h3>Categories</h3>
<ul>
  <% @post.categories.each do |c| %>
    <li><%= link_to c.name, c %></li>
  <% end %>
</ul>

<h3>Comments</h3>
<ul>
  <% @post.comments.each do |c| %>
    <li><%= c.user.username %> says: <%= c.content %></li>
  <% end %>
</ul>

<h3>Commenters</h3>
<ul>
  <% @commenters.each do |c| %>
    <li><%= link_to c.username, c %></li>
  <% end %>
</ul>

<h3>Comment</h3>
<%= form_for @post.comments.build do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Choose a User' %><br>

  <%= f.hidden_field :post_id %>

  <%= f.fields_for :user, @post.comments.last.build_user do |u| %>
    <%= u.text_field :username %>
  <% end %>

  <%= f.submit %>
<% end %>
