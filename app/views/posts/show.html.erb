<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<p><em><%= @post.categories.pluck(:name).join(", ") %></em></p>

<h2>Comments</h2>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.user.username %> says: <%= comment.content %></li>
  <% end %>
</ul>

<h2>Users who have commented on this post:</h2>

<ul>
  <% @post.users.uniq.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ul>

<%= form_for @post.comments.build do |f| %>

  <%= f.hidden_field :post_id %>

  <p><%= f.label :content %></p>
  <p><%= f.text_field :content %></p>

  <p>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </p>

  <%= f.fields_for :user_attributes do |user| %>

    <p><%= user.label :username %></p>
    <p><%= user.text_field :username %></p>

    <p><%= user.label :email %></p>
    <p><%= user.text_field :email %></p>

  <% end %>

  <%= f.submit "Create Comment" %>

<% end %>
