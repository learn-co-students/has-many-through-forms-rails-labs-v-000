<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p>Categories:
  <ul>
    <% @post.categories.each do |c| %>
      <li><%= c.name %></li>
    <% end %>
  </ul>
</p>
<br><br>

<%= form_for @post do |f| %>
  <%= f.label "Comment" %>
  <%= f.collection_select :user_ids, User.all, :id, :username %>
  <%= f.fields_for :comments, @post.comments.build do |comment| %>
    <%= comment.text_field :content %>
  <% end %>
  <%= f.submit %>
  <% end %>

<h3>COMMENTS </h3>
  <ul>
    <% @post.comments.each do |c| %>

    <li> <%= c.content %></li>
    <% end %>
  </ul>
