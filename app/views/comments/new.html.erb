<%= form_for @comment do |f| %>

<%= f.hidden_field :post_id %>

<%= f.label :content %>
<%= f.text_field :content %><br>

  <%= f.label :user_id %>
  <%= f.collection_select :user_id, User.all, :id, :username, :include_blank => 'None' %><br>

  <%= f.fields_for :user do |user| %>
    <%= user.label :username %>
    <%= user.text_field :username %><br>
  <% end %>

  <%= f.submit %>
<% end %>
