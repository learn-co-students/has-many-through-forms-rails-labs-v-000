<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  <br>
  Categories:<br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, @post.categories.build do |fields| %>
    <%= fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
