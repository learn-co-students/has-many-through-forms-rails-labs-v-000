<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <br>

  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, @post.categories.build do |i| %>
    <p>Category Name <%= i.text_field :name %></p>
  <% end %>

  <%= f.submit %>
<% end %>
