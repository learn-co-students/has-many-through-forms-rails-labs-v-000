<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>

  <%= f.label :content %>
  <%= f.text_area :content %>
  <br/>

  <%= f.label :category_ids, "Categories" %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  <br/>

  <%= f.fields_for :categories, @post.categories.build do |category| %>
    <%= category.text_field :name %>
  <% end %>
  <br/>

  <%= f.submit %>
<% end %>
