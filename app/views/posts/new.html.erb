<h1>New Post</h1>
<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>

  <%= f.label "Content" %>
  <%= f.text_area :content %><br>

  <%= f.label "Categories"%>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %><br>
      <%= b.label %>
      <%= b.check_box %>
    <% end %>

  <%= f.label "Enter a new category" %>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>

  <%= f.submit %>
<% end %>
