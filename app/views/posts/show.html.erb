<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<ul>
  <% @post.categories.each do |cat| %>
    <li><%= cat.name%></li>
  <% end %>
</ul>


<ul>
  <% @post.comments.each do |comm| %>
    <li><%=comm.user.username %> says: <%= comm.content%></li>
  <% end %>
</ul>

<ul>
  <% @post.users.uniq.each do |user| %>
    <li><%=link_to user.username, user_path(user)%></li>
  <% end %>
</ul>

<%= form_for @post.comments.build do |f| %>
  <%= f.hidden_field :post_id %>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Please Select' %> or
  <%= f.fields_for :user, User.new do |user_attributes| %>
    <%= user_attributes.text_field :username %> <br>
  <% end %>


  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<ul>
</ul>
