<h1>Create a new post</h1>

<%= form_for @post do |f| %>
	
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br><br>
	<%= f.label :content %>
	<%= f.text_area :content %>
	<br><br>
	<%= f.label :category_ids, "Select Categories" %>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
	<br><br>
	<%= f.fields_for :categories do |cat| %>
		<%= cat.label :name, "New category name" %>
		<%= cat.text_field :name %>
	<% end %>

	<br><br>
	<%= f.submit %>	

<% end %>