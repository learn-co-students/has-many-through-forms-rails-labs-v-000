<%= link_to @post.title, post_path(@post) %>
<%= link_to @post.content, post_path(@post) %>
<% unique_users = [] %>
<% @post.comments.each do |comment| %>
  <%= comment.content %>
  <% unique_users << comment.user %>
  <%= unique_users.uniq %>
  <%end%>


<%= form_for @post do |f| %>
<% @post.comments.each do |comment| %>

Comment: <%= f.text_field :comment_content %>
  
 <%= f.collection_select comment.content, :user_id, User.all, :username%>
  
  <% end %>

  <%= f.submit %>


<% end %>
