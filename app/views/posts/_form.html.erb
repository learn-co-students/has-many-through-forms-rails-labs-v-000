<h1>Create a New Post :</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br />
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, @post.categories.build do |cf| %>
    <%= cf.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
