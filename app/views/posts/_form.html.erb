<%= form_for(@post) do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %><br>

 <p><%= f.label :content %>
 <%= f.text_field :content %><br></p>

 <p><%= f.collection_check_boxes :category_ids, Category.all, :id, :name %></p>

 <p>New Category<%= f.fields_for :categories, post.categories.build do |categories| %>
 	<%= categories.text_field :name %><p>
 <% end %>

 <%= f.submit %>
<% end %>
