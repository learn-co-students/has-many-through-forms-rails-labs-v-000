<h3>Add A Comment</h3>
<%= form_for @post.comments.build do |f| %>
  <%= f.label "Enter your comment:" %>
  <%= f.text_area :content %><br />

  <%= f.hidden_field :post_id %>

  <%= f.label "Select username:" %>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: "Please choose your username" %><br />

  <%= f.fields_for :user, @post.comments.last.build_user do |user_field| %>
    <%= user_field.label "Create username:" %>
    <%= user_field.text_field :username %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>