<%= form_for @post  do |f| %>

  <p>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </p>

  <p> 
    <%= f.label "Content" %> 
    <%= f.text_area :content %>
  </p>


  <p>
    <%= f.label "Select a Category" %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p>
      <%= b.label %> 
      <%= b.check_box %>
    </p>
    <% end %>
  </p>
  
  <p>
    <%= f.label "Create a Category" %>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  </p>

  <% end %>

  <%= f.submit %>

<% end %>

