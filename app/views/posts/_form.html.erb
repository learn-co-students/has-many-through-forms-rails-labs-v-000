<%= form_for @post do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label "Content:" %>
  <%= f.text_field :content %>
  <br><br>

  <%= f.label "Pick a Category:  " %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.label "Or create a New Category:" %>
  <%= f.fields_for :categories, @post.categories.build do |post_cat| %>
    <%= post_cat.text_field :name %>
  <% end %>
  <br><br>

  <%= f.submit %>
<% end %>
