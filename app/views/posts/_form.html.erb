
<%= form_for post do |f| %>
  <h2><%= f.label "Title" %>
  <%= f.text_field :title %></h2>
  <h2><%= f.label "Content" %>
  <%= f.text_area :content %></h2>
<h3> <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>  </h3>

  <h3><%= f.label "You can also create a new category:" %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>

  <% end %>
<%= f.submit %>

<% end %></h3>
