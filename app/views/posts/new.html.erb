

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.label :category %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |box| %>
    <%= box.label %>
    <%= box.check_box %>
  <% end %><br>


  Add new category: <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name, placeholder: "New Category" %><br>
  <% end %>
  <%= f.submit %>
<% end %>
