<h1>Create a new Post:</h1>

<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: 'Select a category'} %>
  <%= f.label "New Category" %>
  <%= f.fields_for :categories, @post.categories.build do |category| %>
    <%= category.text_field :name %>
  <% end %>
  <%= f.submit "Create Post" %>
<% end %>
