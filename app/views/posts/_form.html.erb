
<%= form_for @post do |f| %>
<p>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label "Content:" %>
  <%= f.text_area :content %>
</p>
<p>
  <%= f.label "Select from existing categories:" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |id| %>
    <%= id.label %>
    <%= id.check_box %>
  <% end %>
</p>
<p>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.label "New Category:" %>
    <%= categories_fields.text_field :name %>
  <% end %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
