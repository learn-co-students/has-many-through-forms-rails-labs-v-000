<%= form_for @post do |f| %>
  Title: <%= f.text_field :title %><br><br>
  Content: <%= f.text_area :content %><br><br>

  Category: <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
    <%= category_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
