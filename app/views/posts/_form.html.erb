<%= form_for @post do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>
  <%= f.label :content %><br/>
  <%= f.text_area :content %><br/>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/>
  <%= f.fields_for :categories do |category_fields| %>
    Category <%= category_fields.label :name%><br/>
    <%=category_fields.text_field :name %><br/>
  <%end%>
<%= f.submit %>
<% end %>
