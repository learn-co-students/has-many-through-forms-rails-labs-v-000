<h1>New Post</h1>

<%= form_for @post do |f| %>

  <%= f.label "Title" %>
  <%= f.text_field :title %><br>

  <%= f.label "Content" %>
  <%= f.text_area :content %><br>

  <%= f.label "Choose a category" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <%= f.label "Or Create a New Category" %>
  <%= f.fields_for :categories, Category.new do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>