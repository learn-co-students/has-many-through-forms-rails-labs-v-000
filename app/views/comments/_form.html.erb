<%= form_for @new_comment do |f| %>

    <%= f.hidden_field :post_id %><% @post.id %>
    <h4><%= f.label "Content" %></h4>
    <%= f.text_field :content %><br>


    <h4>Select your username or create a new one:</h4>
    
    <%= f.collection_select :user_id, User.all, :id, :username, {include_blank: true} %><br>

    <%= f.fields_for :user_attributes, User.new do |user_attribute| %>
        <%= user_attribute.label :username %>
        <%= user_attribute.text_field :username %>
    <% end %>

    
    <%= f.submit %>

<% end %>

    