
<%= form_for post do |f| %>
<%= f.label "Title:" %><br>
<%= f.text_field :title %><br>

<%= f.label "Content:" %><br>
<%= f.text_area :content %><br>

<p>
   <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
 </p>

   <%= f.fields_for :categories, post.categories.build do |c| %>
     <%= c.label :name %>
     <%= c.text_field :name %>
<%end%>
<%= f.submit %>
<%end%>
