<%= form_for @comment do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.label :comment %> <br>
  <%= f.text_field :content %><br>

  User:
    <%= f.collection_select :user_id, User.all, :id, :username %><br>

  Or add new user:
    <%= f.fields_for :user, @comment.user do |user| %>
      <%= user.text_field :username %><br>
    <% end %>

  <%= f.submit %>
<% end %>