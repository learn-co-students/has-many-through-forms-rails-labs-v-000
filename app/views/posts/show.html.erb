<h1>Title: <%= @post.title %></h1>

<u><h3>Categories:</h3></u>
<ul>
  <%= @post.categories.each do |category| %>
    <li><%= link_to category.name, category %></li>
  <% end %>
</ul>

<p><%= @post.content %></p><br>

<u><h3>Comments:</h3></u>
<%= @post.comments.each do |comment| %>
  <li><%= comment.user.username %> says: <%= comment.content %></li>
<% end %><br>

<u><h3>Commented Users:</h3></u>
<%= @post.users.uniq.each do |user| %>
  <li><%= link_to user.username, user %></li>
<% end %><br>

<u><h3>Add a New Comment:</h3></u>
<%= form_for @post.comments.build do |f| %>
  <%= f.label "Content:" %>
  <%= f.text_field :content %><br>
  <%= f.label "User:" %>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Choose a User' %><br>
  <%= f.hidden_field :post_id %>

  <u><h3>Create a New User:</h3></u>
  <%= f.fields_for :user, @post.comments.last.build_user do |user| %>
    <%= user.text_field :username %>
  <% end %><br>

  <%= f.submit %>
<% end %>
