<%= form_for post do |f| %>
  title: <%= f.text_field :title %><br />
  content: <%= f.text_field :content %><br />
categories:  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: "select a category"} %><br />

<%= f.label "OR create a new category"  %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
  <%= categories_fields.text_field :name %>
<% end %>
  <%= f.submit %>
<% end %>
