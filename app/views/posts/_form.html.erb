
<%= form_for post do |f| %>
<%= f.label :title%><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<%= f.label :category_ids, "Choose a category" %><br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
<%= f.label :categories, "Or create a category" %><br>
<%= f.fields_for :categories, post.categories.build do |category_new| %>
<%= category_new.text_field :name %>
<% end %><br>
<%= f.submit "Create Post" %>
<%=  %>
<% end %>
