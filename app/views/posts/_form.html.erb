<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%= f.label :content %>
	<%= f.text_area :content %><br>

	<%= f.fields_for :categories do |category| %>

		<%= category.label :name %>
		<%= category.text_field :name %><br>


	<% end %>

	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br><br>

	<%= f.submit %>



<% end %>
