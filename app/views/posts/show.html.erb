<h3><%= @post.title %></h3>
<h3><%= @post.content %></h3>
<% @post.users.uniq.each do |user| %>
  <h3><%= link_to user.username, user_path(user) %> says:</h3>
    <% user.comments.each do |comment| %>
      <%= comment.content %>
    <% end %>
  <% end %>
<h2>Categories:</h2>
<% @post.categories.each do |category| %>
  <h3><%= category.name %></h3>
<% end %>
<%= render 'comment_form' %>
