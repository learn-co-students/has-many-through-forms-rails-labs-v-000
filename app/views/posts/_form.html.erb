<%= form_for @post do |f| %>
  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %><br>
  <%= f.text_area :content %><br>
  <%= f.label "Category" %><br>
  <%= f.collection_check_boxes(
        :category_ids,
        Category.all,
        :id,
        :name,
        { include_blank: "Please select one" }
  ) %>
  <%= f.fields_for :categories, @post.categories.build do |categories_attributes| %>
    <%= categories_attributes.text_field :name %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
