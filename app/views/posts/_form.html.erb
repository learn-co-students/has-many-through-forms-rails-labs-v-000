<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :content %>
  <%= f.text_area :content %>
  <br> 
 


  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  
  <%= f.label "Add a Category:" %>
  <br>
  <%= f.fields_for :categories, Category.new do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <br><br>

  <%= f.submit %>
<% end %>
