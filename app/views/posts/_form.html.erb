<h1>New Post Form</h1>

  <%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br><br>
  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.label "Add a new category" %>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
      <%=categories_fields.text_field :name %>
    <%end%>
    <br>
  <%= f.submit %>
  <%end%>
