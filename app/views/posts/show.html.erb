<h2><%= @post.title %></h2>
<p><%= @post.content %></p>


<%= @post.categories.each do |category| %>
  <%= link_to category.name, category_path(category) %><br>
<% end %>

<h2>Comments</h2>
<%= @post.comments.each do |comment| %>
  <%= comment.user.username %> says: 
  <%= comment.content %><br>
<% end %>

<h4>Users who have commented</h4>
<ul>
  <% @post.users.uniq.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
  <% end %>
</ul>

<h2>Add a Comment</h2>
<%= form_for @post.comments.build do |f| %>
  <%= f.text_area :content, :placeholder => "Add your comment here" %><br><br>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Choose a user' %>
  <%= f.hidden_field :post_id %>
  <%= f.fields_for :user, @post.comments.last.build_user do |user_fields| %>

  <%= user_fields.text_field :username, :placeholder => "Add a New User"%><br><br>
  <% end %>

  <%= f.submit %>
<% end %>