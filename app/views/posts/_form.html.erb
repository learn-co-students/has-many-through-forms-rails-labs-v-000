<h1>New Post</h1>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br><br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
<%= f.label :categories %>
  <%= f.fields_for :categories, @post.categories.build do |catt|%>
  <%= catt.text_field :name %>
  <% end %>
<%= f.submit %>
<% end %>
