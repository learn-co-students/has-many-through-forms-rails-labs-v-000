<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>

<p>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
</p>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

<hr>

<p>
  Create a new category:
  <%= f.fields_for :categories, post.categories.build do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
