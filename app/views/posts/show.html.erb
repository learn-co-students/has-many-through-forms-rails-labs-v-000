<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>

<h4>Comments:</h4>
<p>
  <% @post.comments.each do |comment| %>
    <div class="">
      <%= comment.content %>
    </div>
  <% end %>
</p>

<h4>Users who've commented:</h4>
<ul>
  <% @post.unique_commented_user_list do |user| %>
    <li>user.name</li>
  <% end %>
</ul>

<%= form_for @post do |f| %>
  <%= f.fields_for :comments, @post.comments.build do |c| %>
    <%= c.label "comment" %><br />
    <%= c.text_field :content %><br />
    <%= c.label :user %><br />

    <%= c.collection_select(:comment, :user_id, User.all, :id, :username, {:include_blank => true}) %><br />
  <% end %>

  <%= f.submit "Create Comment"%>
<% end %>
