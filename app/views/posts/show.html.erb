<h1> <%= @post.title %> </h1>

<p> <%= @post.content %> </p>

Categories:<br />
<ul>
  <% @post.categories.each do |cat| %>
  <li> <%= cat.name %> </li>
  <% end %>
</ul>

Comments:<br />
<ul>
  <% @post.comments.each do |comment| %>
  <li> <%= "#{comment.user.username} says: #{comment.content}" %> <br>
       </li>
  <% end %>
</ul>

Users:<br />
<ul>
  <% @post.users.uniq.each do |user| %>
  <li> <%= link_to user.username, user_path(user) %> <br>
       </li>
  <% end %>
</ul>




