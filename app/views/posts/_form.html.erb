<%= form_for post do |f| %>
    <%= f.text_field :title, placeholder: "Title" %> <br>
    <%= f.text_area :content, placeholder: "Content" %> <br>
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>
    <%= f.fields_for :categories, post.categories.build do |c| %>
        <%= c.text_field :name, placeholder: "Cateogry Name" %>
    <%end%>
    <%= f.submit %>
<%end%>
