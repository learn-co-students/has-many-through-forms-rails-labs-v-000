<%= form_for post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br><br>

  <%= f.label "Choose an existing category" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.label "Or, create a new category" %><br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name, :placeholder => "Create a New Category" %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
