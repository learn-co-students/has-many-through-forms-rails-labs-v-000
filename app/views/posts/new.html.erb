<h1>Create a New Post</h1>

<%= form_for @post do |f| %>

  <div>
    <%= f.label "Title" %>
    <br>
    <%= f.text_field :title %>
  </div>
  <br>

  <div>
  <%= f.label "Content" %>
  <br>
  <%= f.text_area :content %>
  </div>
  <br>

  <div>
  <%= f.label "Category" %>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
  <%= categories_fields.text_field :name %>
  <% end %>
  </div>
  <br>

  <%= f.submit %>
<% end %>
