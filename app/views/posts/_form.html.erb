<h2>New Post Form</h2>
<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %><br>
  Existed Category: <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  New Category: <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %><br>

  <%= f.submit %>
<% end %>