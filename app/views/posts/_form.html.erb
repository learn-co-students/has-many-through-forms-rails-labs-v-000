<h1>Create a New Post</h1>

<%= form_for post do |f| %>
  <%= f.label "Title" %><br />
  <%= f.text_field :title %></p>
  <%= f.label "Content" %><br />
  <%= f.text_area :content %></p>
  <%= f.label "Choose Categories" %><br />
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %></p>
  <%= f.label "Create New Category" %><br />
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %></p>
  <% end %>
  <%= f.submit %>
<% end %>
