<h1>Create a new post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <p>Create a new category</p>
  Category:
  <%= f.fields_for :categories, @post.categories.build do |categories_attributes| %>
    <%= categories_attributes.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
