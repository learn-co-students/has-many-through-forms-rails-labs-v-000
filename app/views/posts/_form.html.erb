
<%= form_for post do |f| %>
<%= f.text_field :title %></br>
<%= f.text_area :content %></br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %></br>
<%= f.fields_for :categories, post.categories.build do |x| %>
 <%= x.text_field :name %></br>
<% end %>
<%= f.submit %></br>
<% end %>