<div class=post-content>
  <%= @post.title %>
  <%= @post.content %>

  <% @post.categories.each do |category| %>
    <%= category.name %>
  <% end %>

  <% @post.comments.each do |comment| %>
    <%= comment.user.username %> says:
    <%= comment.content %>
  <% end %>



<h3>Contritubting Users:</h3>
  <% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
  <% end %>


</div>
