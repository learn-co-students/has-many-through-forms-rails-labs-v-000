
<%= form_for @post do |f| %>

<%= f.label "Title" %>
<%= f.text_field :title %>
<br/>
<%= f.label "Content" %>
<%= f.text_field :content %>
<br/>
<%= f.label "Categories" %>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<br/>
<%= f.fields_for :categories, @post.categories.build do |cat| %>
	<%= cat.text_field :name %>
<%end%> 

<br/>


<%= f.submit %>


<%end%>