<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<h4>Categories: </h4>
<ul>
  <% @post.categories.each do |cat| %>
    <li><%= cat.name %></li>
  <% end %>
</ul>

<h4>Comments:</h4> 
<ul>
  <% @post.unique_users.each do |user| %>
    <li><%= link_to user.username, user_path(user) %>
      <%  user.comments.each do |comment| %>
        says: <%= comment.content %></li>
        <% end %>
  <% end %>
</ul>

<%= form_for @post do |f| %>
  <%= f.fields_for :comments, @post.comments.build do |comments_attributes| %>
    <%= comments_attributes.text_area :content %>
  <% end %>
  <%= f.submit %>
<% end %>
