<h1><%=@post.title%></h1>
<h3>Categories:</h3>
<%@post.categories.each do |cat|%>
  <%=cat.name%>
  <br>
<%end%>
<h3>Content:</h3>
<p><%=@post.content%></p>

<!-- listing comments w/user -->
<h3>Comments:</h3>
<%@post.comments.each do |comment|%>
  <p><%=comment.content%> - <%=comment.user.username%></p>
<%end%>

<!-- listing users -->
<h3>Unique Users:</h3>
<%@post.users.uniq.each do |user|%>
  <%=link_to user.username, user_path(user)%>
<%end%>

<!-- allowing form to add comment -->
<h3>New Comment:</h3>

<%= form_for @post.comments.build do |f|%>
  <%=f.label :content%>
  <%=f.text_field :content%>

  <%=collection_select(:user_ids, User.all, :id, :username, {:include_blank => true})%>
<%end%>
