<h1><%= @post.title %> </h1>
<p><%= @post.content %></P>
<p><% @post.categories.each do |category| %>
  <%= link_to category.name, category %></p>
  <% end %>
<h3> Comments: </h3>
  <ul>
   <% @post.comments.each do |comment| %>
     <% if comment.user %>
     <li><%= comment.user.username %> says: <%= comment.content %></li>
     <% end %>
   <% end %>
   </li>
 </ul>
 <h3> Users </h3>
  <ul>
 <% @post.users.uniq.each do |user| %>
   <li><%= link_to user.username, user %></li>
 <% end %>
 </ul>
  <h3>Add a Comment</h3>
 <%= form_for @post.comments.build do |f| %>

   <%= f.label :content, "Comment:" %>
   <%= f.text_field :content %>
   <%= f.hidden_field :post_id %>
   <br>
   <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Who Are You?' %>
   or <%= f.label :user, "Add Yourself" %>
   <%= f.fields_for :user, @post.comments.last.build_user do |user| %>
     <%= user.text_field :username %>
    <% end %>

   <%= f.submit %>
 <% end %>
