<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    Make your own category;
    <%= f.fields_for :categories_attributes_0, post.categories.build do |category_fields| %>
        <%= category_fields.text_field :name %>
    <% end %>

    <%= f.submit "Create Post" %>
<% end %>

