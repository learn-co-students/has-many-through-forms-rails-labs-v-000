<h2>Title:</h2>
<%= @post.title %>
<h2>Content:</h2>
<%= @post.content %>
<h2>Categories:</h2>
<% @post.categories.each do |category| %>
  <li><%= category.name %></li>
<% end %> <br>

<h2>Comments:</h2>
<% @post.comments.each do |comment| %>
  <%= comment.user.username %> says: <%= comment.content %>
<% end %>

<h2>Users that have commented: </h2>
<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>


<h2>New Comment:</h2>

<%= form_for @post.comments.build do |f| %>
  
  <%= f.label :content %>
  <%= f.text_area :content %>
  
  <%= f.label "Username" %>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: "Select" %><br>
    <%= f.hidden_field :post_id %>
  
  <%= f.label "New User" %>
  <%= f.fields_for :user, @post.comments.last.build_user do |user_attributes| %>
    <%= user_attributes.text_field :username %><br>
  <% end %>
  <%= f.submit %>
<% end %>


