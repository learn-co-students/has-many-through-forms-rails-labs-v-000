<%= form_for @post do |f| %>
 <div>
    <%= f.label "Title" %>
    <%= f.text_field :title %>

    <%= f.label "Content" %>
    <%= f.text_field :content %>

  </div>

   <div>
    <h3>Select a Category</h3>

    <%= f.collection_check_boxes( :category_ids, @categories, :id, :name )%>

  </div>
   <div>
    <h3>Create a Category</h3>
    <%= f.fields_for :categories do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <%end%>
  </div>


<%= f.submit %>
<%end%>
