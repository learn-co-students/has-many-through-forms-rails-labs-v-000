<h2>Post Form</h2>
<%= form_for @post do |f|%>
 Title: <%= f.text_field :title %><br>
 Content: <%= f.text_field :content %><br> 
 Category: <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
 Create Category: <br>
 
 <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
  Name: <%= categories_fields.text_field :name%>
 <% end%><br>

 <%= f.submit %>
<% end%>