<h1>New Post</h1>

<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br></br>

    <%= f.fields_for :categories do |category_builder| %>
      <%= category_builder.text_field :name %>
    <% end %><br></br>

    <%= f.submit %>
<% end %>
