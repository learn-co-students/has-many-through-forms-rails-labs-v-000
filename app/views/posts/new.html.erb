
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories do |category_fields| %>
    <%= category_fields.label :name %>
    <%= category_fields.text_field :name %>

  <% end %>

<%= f.submit %>
<% end %>