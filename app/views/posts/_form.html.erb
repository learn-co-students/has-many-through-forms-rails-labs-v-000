<%= form_for @post do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %><br/>
  </fieldset>
  <fieldset>
    <%= f.label :content %>
    <%= f.text_area :content %><br><br/>
  </fieldset>
  <fieldset>
    <%= f.label :categories %><br>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>
  </fieldset>
  <fieldset>
    <%= f.fields_for :categories_attributes, @post.categories.build do |categories_fields| %>
      <%= categories_fields.label 'Create a new Category' %>
      <%= categories_fields.text_field :name %>
    <% end %>  
  </fieldset>
  <%= f.submit %>
<% end %>
