<h1><%= @post.title %></h1>
<h2><i><%= @post.content %></i></h2><br>

<fieldset>
  <legend>Categories</legend>
    <ul>
      <% @post.categories.each do |c| %>
        <li><%= link_to c.name, category_path(c) %></li>
      <% end %>
    </ul>
</fieldset><br>

<fieldset>
  <legend>Comments</legend>
  <ul>
    <% @post.comments.each do |c| %>
      <li><%= c.user.username %> says: <%= c.content %></li>
    <% end %>
  </ul>
</fieldset><br>

<fieldset>
  <legend>Commenters</legend>
    <ul>
      <% @post.users.uniq.each do |u| %>
        <li><%= link_to u.username, user_path(u) %></li>
      <% end %>
    </ul>
</fieldset><br>

<h2>Add a Comment</h2>
<%= form_for @post.comments.build do |f| %>
  <%= f.text_area :content, :placeholder => "Add your comment here" %><br><br>
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Choose a user' %>
  <%= f.hidden_field :post_id %>
  <%= f.fields_for :user, @post.comments.last.build_user do |user_fields| %>
  &nbsp or &nbsp
  <%= user_fields.text_field :username, :placeholder => "Add a New User"%><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
