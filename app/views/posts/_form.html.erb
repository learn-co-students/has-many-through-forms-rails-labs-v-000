<%= form_for(post) do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>

  <%= f.label :content %> <br>
  <%= f.text_area :content %>

  <h3>Select a Category</h3> <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>

  <h3>Add a New Category</h3> <br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.label 'Category Name' %> <br>
    <%= categories_fields.text_field :name %> <br>
  <% end %>

  <%= f.submit %>
<% end %>
