<!-- # app/views/post/_form.html.erb -->

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>:
    <%= f.text_area :content %>
  </p>

  <%= f.label :categories %>:
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p>
      <%= b.label %>
      <%= b.check_box %>
    </p>
  <% end %>

  <p>
    <%= f.label :new_category %>:
    <%= f.fields_for :categories do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %><br />
  </p>

  <%= f.submit %>
<% end %>
