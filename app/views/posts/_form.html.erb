<h1>Create New Post:</h1>
<%= form_for @post do |p| %>
  <%= p.label :title %>
  <%= p.text_field :title %><br>
  <%= p.label :content %>
  <%= p.text_field :content %><br>
  <%= p.collection_check_boxes :category_ids, Category.all, :id, :name  %>
  <%= p.fields_for :categories, post.categories.build do |c| %>
    <%= c.text_field :name %>
  <% end %>
  <%= p.submit %>
<% end %>
