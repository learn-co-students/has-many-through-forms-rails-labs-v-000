<h1>New Post</h1>

<%=form_for(@post) do |f| %>
    <%=f.label :title %>
    <%=f.text_field :title %>
    <br><br>
    <%=f.label :content %>
    <%=f.text_area :content %>
    <br>
    <%=f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%=f.fields_for :categories, post.categories.build do |category_attributes| %>
        <%= category_attributes.label :name %>
        <%= category_attributes.text_field :name %>
    <% end %>

    <%=f.submit%>
<% end %>