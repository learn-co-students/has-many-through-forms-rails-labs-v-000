<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h3>Comments</h3>
  <table>
    <% @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
    </tr>
    <% end %>
  </table>
<h3>Commenting Users</h3>
  <ul>
    <% @post.users.distinct.each do |user| %>
    <li><%= link_to(user.username, user_path(user)) %></li>
    <% end %>
  </ul>
<h3>Categories</h3>
<ul>
<% @post.categories.each do |cat| %>
  <li><%= cat.name %></li>
<% end %>
</ul>

