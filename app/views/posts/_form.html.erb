<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :content %>
  <%= f.text_area :content %>
  <br><br>

  <%= f.label "Choose a category:" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>

  <%= f.fields_for :categories, post.categories.build do |category| %>
    <%= category.label "Create a new category:" %>
    <%= category.text_field :name %>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>
