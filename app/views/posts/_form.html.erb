<%= form_for(@post) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :content %>
<%= f.text_area :content %>
<br>
<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)%>
<br>
<%= f.fields_for :categories, Category.new do |c_b| %>
  <%= c_b.text_field :name %>
<%end%>
<%= f.submit %>
<%end%>
