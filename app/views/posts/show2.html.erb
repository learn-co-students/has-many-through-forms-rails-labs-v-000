<h1><%= @post.title %></h1>

<p><%= @post.content %></p><br><br>

<h2>Comments Section</h2>
<h3>Leave Your Comment</h3>
<%= form_for @comment do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :commenting_user %>
  <%= f.collection_select :user_ids, User.all, :id, :username, {include_blank: 'Create New User'} %>
  <%= f.fields_for :users, @post.users.build do |user| %>
    <%= user.text_field :username %>
  <% end %>

  <%= f.submit %>
<% end %>

<h3>Read Others' Comments</h3>
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p><br>
<% end %><br><br>

<h4>Thank You to Our Interactive User Community!</h4>
<% @post.users.uniq.each do |user| %>
  <p><%= link_to user.username, user_path(user) %></p><br>
<% end %>