<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>
  <%= f.label :content %>
  <%= f.text_area :content %> <br>
  <h3>Categories:</h3>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <h3>Create one:</h3>
  <%= f.fields_for :categories, @post.categories.build do |cat_attr| %>
    <%= cat_attr.label :name, "Category Name:" %>
    <%= cat_attr.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
