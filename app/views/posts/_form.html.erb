<%= form_for @post do |f| %>
    <p><%= f.label :title %>
    <%= f.text_field :title %></p>
    
    <p><%= f.label :content %>
    <%= f.text_area :content %></p>

    Choose from an existing category:
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
        <p>
        <%= b.label %>
        <%= b.check_box %>
        </p>
    <% end %>

    <p>
    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
        Category Name: <%= categories_fields.text_field :name %> <br>
    <% end %>
    </p>

    <%= f.submit %>
<% end %>
