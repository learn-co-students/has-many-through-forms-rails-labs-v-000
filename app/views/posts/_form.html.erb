<%= form_for(@post) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<br><br>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<br><br>

	<%= f.label "Categories" %>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

	<br><br>

	<%= f.label "Create Category" %>
	<%= f.fields_for :categories, @post.categories.build do |cf| %>
		<%= cf.text_field :name %>
	<% end %>

	<br><br>

	<%= f.submit %>	
<% end %>