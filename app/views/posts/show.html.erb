<h1><%= @post.title %></h1>
<h2><%= @post.content %></h2>
<% @post.categories.each do |cat| %>
  <h2><%= link_to cat.name, category_path(cat) %></h2>
<% end %>
<h2>Comments</h2>
<ul>
<% @post.comments.each do |comment| %>
  <li><%= link_to comment.user.username, user_path(comment.user) %> -
    <%= comment.content %></li>
<% end %>
</ul>

<%= form_for @post.comments.build do |f| %>
  <%= f.hidden_field :post_id %>
  <%= f.label "Existing User" %>
  <%= f.collection_select :user_id, User.all, :id, :username %>
  <br>
  <%= f.label "New User" %>
  <%= f.fields_for :user, @post.users.build do |com| %>
    <%= com.text_field :username %>
    <br>
  <% end %>

  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit %>
<% end %>
