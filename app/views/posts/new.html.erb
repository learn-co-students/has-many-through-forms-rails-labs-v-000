<%= form_for :post, url: posts_path do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.fields_for :categories, @post.categories.build do |categories_fields|%>
<%= f.label "Category" %>
<%= categories_fields.text_field :name %>
<% end %>
<%= f.submit %>
<% end %>

