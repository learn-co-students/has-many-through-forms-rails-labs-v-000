
<%= form_for @post do |f| %>
  Title: <%= f.text_field :title %>
  Content: <%= f.text_field :content %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, @post.categories.build do |ff| %>
    New Category: <%= ff.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
