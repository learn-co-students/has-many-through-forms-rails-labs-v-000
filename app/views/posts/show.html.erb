
<h1><%= @post.title %></h1>

<%= @post.content %><br>
<% @post.categories.each do |cat| %>
  <%= cat.name %>
<% end %>

<h2>Comments:</h2>
<% @post.comments.each do |comment| %>
  <%= comment.content %><br>
<% end %>

<h2>Users who have commented:</h2>
<% @unique_users.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>
