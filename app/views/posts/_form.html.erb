<h1>Create a New Post</h1>

<%= form_for post do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br><br>
  <%= f.label "Content:" %><br>
  <%= f.text_area :content %><br><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |cat_field| %>
    <%= cat_field.label "New Category:" %>
    <%= cat_field.text_field :name %>
  <% end %><br><br>

  <%= f.submit %>
<% end %>
