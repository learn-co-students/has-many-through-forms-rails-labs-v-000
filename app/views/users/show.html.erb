<!-- # app/views/users/show.html.erb -->

<h1><%= @user.username %></h1>

<p>email: <%= @user.email %></p>
<p>Comments:</p>
<ul>
  <% @user.comments.each do |comment| %>
    <li>
      <%= link_to comment.post.title, post_path(comment.post) %>
      <%= comment.content %>
    </li>
  <% end %>
</ul>
