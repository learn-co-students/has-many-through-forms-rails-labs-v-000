<%= form_for @post do |f|%>
    Title: <%= f.text_field :title %><br/>
    Content: <%= f.text_field :content %><br/>
    <%= f.fields_for :categories do @post.categories.build do |cat| %>
        Category: <%= cat.text_field :name %>
    <% end %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/>
     
    <%= f.submit %>
       
<% end %>