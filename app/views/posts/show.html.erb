<h2><%= @post.title %></h2>

<p><%= @post.content %></p>

<h4>Categories</h4>
<ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<h4>All Comments</h4>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %> - <%= comment.user_name %></li>
  <% end %>
</ul>

<h4>Commenters</h4>
<ul>
  <% @post.unique_users.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
  <% end %>
</ul>