
<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>

  <!-- checkboxes for categories that already exist in the database -->
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

<!-- to create new categories -->
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
