<%= form_for @post do |f| %>

  <%= f.label "Title" %>
  <%= f.text_field :title %><br><br>

  <%= f.label "Content" %>
  <%= f.text_area :content %><br><br>

  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

  <%= f.fields_for :categories, @post.categories.build do |c| %>
    <%= c.label "New Category:" %>
    <%= c.text_field :name %><br><br>
  <% end %>

  <%= f.submit %>

<% end %>
