<!-- # app/views/Comments/_comment_form.html.erb -->
<%= form_for @comment do |f| %>
    <%= f.label :content %>:
    <%= f.text_area :content %><br />

    <%= f.fields_for :user do |user_builder| %>
    <fieldset>
      <legend>User (username required, email only required for new Users)</legend>
      <%= user_builder.label :user %>:
      <%= user_builder.collection_select(:user, :id, User.all, :id, :username) %>
    </fieldset>

    <%= comment_builder.submit %>
  <% end %>

<% end %>
