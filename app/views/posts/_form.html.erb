
 
<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%=f.label "Categories"%>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, @post.categories.build do |c| %>
    <%= c.label "Name" %>
    <%= c.text_field :name %>
    <%end%>


  <%= f.submit %>
<% end %>