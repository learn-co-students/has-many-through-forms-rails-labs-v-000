<h1>New Post Form</h1>

<%= form_for(@post) do |f| %>
  <p><%= f.label :title, "Title:" %> <%= f.text_field :title %></p>

  <p>
    <%= f.label :content, "Content:" %><br>
    <%= f.text_area :content %>
  </p>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, @post.categories.build do |cfield| %>
    <%= cfield.text_field :name %>
  <%end %>

  <%= f.submit %>
<% end %>
