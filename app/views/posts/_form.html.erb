<h1>User Form</h1>
<%= form_for post do |f| %>
  <%= f.label 'Title' %>
  <%= f.text_field :title %>
  <%= f.label 'Content' %>
  <%= f.text_area :content %>
  <br></br>
  <%= f.label 'category(s)' %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, include_blank: true) do |box|%>
    <p>
      <%= box.label %>
      <%= box.check_box %>
     </p>
    <% end %>
  <%= f.label 'New Category' %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
