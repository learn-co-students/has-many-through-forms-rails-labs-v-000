<%= form_for @comment do |f| %>
  <%= f.hidden_field :post_id, value: @post.id%>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.fields_for :users, @comment.build_user do |users_fields| %>
    <%= users_fields.collection_select :comment, :user, User.all, :id %>
  <% end %>
  <%= f.submit %>
<% end %>
