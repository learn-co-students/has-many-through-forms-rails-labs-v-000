<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, Category.new do |c| %>
      <%= c.text_field :name %>
    <% end %>
    <%= f.submit %>
  </p>
<% end %>
