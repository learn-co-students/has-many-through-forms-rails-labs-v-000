<h1>Create New Post</h1>
<%= form_for @post do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>
  
  <p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  </p>
  
  Select Categories:<br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br></br>
  
  Create New Category <br>
  <%= f.fields_for :categories do |category| %>
    <%= category.text_field :name %>
  <% end %><br></br>

  <%= f.submit %>
<%end%>
