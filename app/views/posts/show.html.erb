Title:<br>
<%= @post.title %>
<br><br>

<%= @post.content %>

Categories: <br>
<% @post.categories.each do |cat| %>
  <%= cat.name %><br>
<% end %>

Comments: <br>
<% @post.comments.each do |comment| %>
  <%= comment.content %><br>
<% end %>

Users who commented: <br>
<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user)%><br>
<% end %>

Add comment:<br>
<%= form_for(@post) do |f| %>
  <%= f.collection_select :user_ids, User.all, :id, :username %>
  <%= f.textarea :content %>
<% end %>
