<%= form_for @post do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br><br>

  <%= f.label "Content:" %>
  <%= f.text_area :content %><br><br>

  <%= f.label "Select an Existing Category:" %><br>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <%= b.label %>
    <%= b.check_box %>
    <br>
  <% end %>

  <br>

  <%= f.label "And/or Create a New Category:" %><br>
  <%= f.fields_for :categories do |categories_fields| %>
    <%= categories_fields.text_field :name %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
