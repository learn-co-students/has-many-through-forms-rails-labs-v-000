<h1><%= @post.title %></h1>

<p>
  Content: <%= @post.content %>
</p>

<h2>Categories:</h2>
<% @post.categories.each do |c| %>
  <%= c.name %>
<% end %>

<h2>Comments:</h2>
<% @post.comments.each do |comment| %>
  <%= comment.content %>
<% end %>

<h2>Users:</h2>
<% @post.users.distinct.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>
