<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br  />
  <%= f.label :content %>
  <%= f.text_field :content %> <br  />
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <p>Categories: </p>
  <%= f.fields_for :categories do |cat| %>
    <%= cat.label :name %>
    <%= cat.text_field :name %> <br  />
  <% end %>

  <%= f.submit 'Create Post' %>
<% end %>