<%= form_for @comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_field :content %>
  <%= f.collection_check_boxes :User_ids, User.all, :id, :username %>
  <%= f.fields_for :user, @comment.user.build do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>
  <%= f.submit %>
<% end %>
