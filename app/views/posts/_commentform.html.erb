<%= form_for @post.comments.build do |f| %>
  <p>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </p>

  <%= fields_for User.new do |u| %>
    <%= u.text_field :username %>
  <% end %>

  <p>
    <div class="fl"> <%= f.label :content %> </div>
    <%= f.text_area :content %>
  </p>

  <p><%= f.submit %></p>
<% end %>
