<h1>Create a New Post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>

  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  /// Add a category:
  <%= f.fields_for :categories, @post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>
  <br/>

  <%= f.submit %>
<% end %>
