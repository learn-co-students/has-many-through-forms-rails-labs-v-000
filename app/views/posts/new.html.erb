<%= form_for(@post)  do |f|%>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<%= f.label :content %><br>
	<%= f.text_area :content %> 
 
    <!--  How can i build a checkbox for each category  -->
    	<h4>Select a Category:</h4>
    	<ul>
    	<% Category.all.each do |c| %>
    		<li>	<label for="category_id_<%=c.id%>"><%=c.name%></label> 
    		<input type="checkbox" name="post[category_ids][]" value="<%=c.id%>" value="<%=c.id%>" id="category_id_<%=c.id%>">
    		</li>
    	<% end %>
 		</ul>																
 	 <!-- Soem how with Mass assigment  -->
 	 <b>-Or Create a new</b>  <br>
 	 					   <!-- post_categories_attributes_0_name -->



 	 					   <%= f.fields_for :categories, Category.new do |category_builder| %>
 	 					   		<%= category_builder.text_field :name %>
 	 					   <% end %>
 
	<%= f.submit %>


<% end %> 


