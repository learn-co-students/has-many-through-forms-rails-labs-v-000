<%=form_for @post do |f|%>
  <%=f.label :title%><br />
  <%=f.text_field :title%><br />

  <%=f.label :content%><br />
  <%=f.text_area :content%><br />

  <strong>Existing Categories</strong>
  <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%><br /><br />
    <strong>New Category</strong>
    <%=f.fields_for :categories, @post.categories.build do |category| %><br />
      <%=category.label :name%><br />
      <%=category.text_field :name%><br />
    <%end%>
  <%=f.submit%><br />
<%end%>
