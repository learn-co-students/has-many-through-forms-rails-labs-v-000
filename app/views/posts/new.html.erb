<h1>New Post</h1>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :content %>
  <%= f.text_area :content %>

  <br><br>

  <p>Categories (select as many as appropriate):</p>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <p>And/or add a new Category:</p>
  <%= f.fields_for :categories, @post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>

  <br><br>

  <%= f.submit %>


<% end %>
