<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <%= f.collection_check_boxes :user_ids, User.all, :id, :name %>
  <%= f.fields_for :users, post.users.build do |users_fields| %>
    <%= users_fields.text_field :name %>
    <%= f.fields_for :comments, post.comments.build do |comments_fields| %>
      <%= comments_fields.text_field :name %>
  <% end %>
  <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
