<h1>New Post Form</h1>

<%=form_for @post do |f|%>
  <%=f.label :title%>
  <%=f.text_field :title%> <br>

  <%=f.label :content%>
  <%=f.text_field :content%><br>

  <%=f.label :category_ids%><br>
  <%=f.collection_check_boxes :category_ids, Category.all, :id, :name%>

  <%=f.fields_for :categories, @post.categories.build do |categories_attributes|%>
    <%= categories_attributes.label :name  %>
    <%= categories_attributes.text_field :name%>
  <%end%>

  <%=f.submit "Create Post"%>
<%end%>
