
<%= form_for @post do |f| %>
  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %><br>
  <%= f.text_area :content %><br>
  <%= f.label "existing categories" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.label "New category" %><br>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    Category name: <%= categories_fields.text_field :name%>
  <% end %>
  <%= f.submit %>
<% end %>
