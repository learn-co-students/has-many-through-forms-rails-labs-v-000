<%= form_for post do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :category %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <p>
        <%= b.label %>
        <%= b.check_box %>
      </p>
      <% end %>

    <%= f.fields_for :categories, post.categories.build do |categories_field| %>
    <%= categories_field.text_field :name %>
    <% end %>
  </p>
    <%= f.submit %>


<% end %>
