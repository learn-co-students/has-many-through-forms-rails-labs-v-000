<h1>Create New Post!</h1>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, @post.categories.build do |categ| %>
    <fieldset>
      <legend>New Category</legend>
      <%= categ.label :name %>
      <%= categ.text_field :name %>
    </fieldset>
  <% end %>

  <%= f.submit %>
<% end %>
