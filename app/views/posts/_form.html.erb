<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <br>
  <br>

  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br>
  <br>

  <%= f.label "Choose an existing Category" %>

  <br>
  <br>

  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p>
      
      <%= b.check_box %>
      <%= b.label %>
      
    </p>
  <% end %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>

<br>

<p>or</p>
    <%= f.label "Enter a new Category:" %>
    <%= categories_fields.text_field :name %>
  <% end %>

  <br>
  <br>

  <%= f.submit %>
<% end %>