<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>
<p>
  Categories: <br />
  <% @post.categories.each do |category| %>
    <%= category.name %><br />
  <% end %>
</p>
<h4>Comments:</h4>
<p>
  <% @post.comments.each do |comment| %>
    <div class="">
      <%= comment.comm_user %>
      says:
      <%= comment.content %>
    </div>
  <% end %>
</p>

<h4>Users who've commented:</h4>
<ul>
  <% @post.unique_commented_user_list do |user| %>
    <li>user.name</li>
  <% end %>
</ul>

<%= form_for @comment do |f| %>
  <%= f.label "Add comment" %><br />
  <%= f.text_field :content %><br />

  <%= f.label "User" %><br />
  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: true %>

  <%= f.label "Or Create new User" %><br />
  <%= f.text_field :user %>

  <%= hidden_field_tag 'post_id', @post.id %>

  <%= f.submit "Create Comment" %>
<% end %>
