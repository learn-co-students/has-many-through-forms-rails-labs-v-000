<%= form_for @post do |f| %>
    <%= f.label :post_title %>
    <%= f.text_field :title %> <br>

    <%= f.label :post_content %>
    <%= f.text_field :content %> <br>

    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>

    <%= f.label :new_category, "Create a New Category" %>
    <%= f.fields_for :categories, Category.new do |cat_fields| %>
        <%= cat_fields.text_field :name %>
    <% end %>
    <br>
    <%= f.submit %>
<% end %>