<%= form_for @post do |f| %>

  <%= f.label :title%>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <h3>Create New Category</h3>
  
  <%= f.fields_for :categories do |category_builder| %>
    <%= category_builder.label :name, "Category Name" %>
    <%= category_builder.text_field :name %><br>
  <% end %>

  <%= f.submit %>

<% end %>
