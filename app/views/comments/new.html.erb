<%= form_for @comment = Comment.new do |f|%>
  Comment : <%= f.text_field :content%><br>
  Select User: <%= f.collection_select :user_id, User.all, :id, :username, :include_blank => true %><br>
  Select Post: <%= f.collection_select :post_id, Post.all, :id, :title%><br>
    <%= f.fields_for :user, @comment.build_user do |user_fields|%>
      Enter Username: <%= user_fields.text_field :username, :include_blank => true%> <br>
    <% end %>
  <%= f.submit %>
<% end %>