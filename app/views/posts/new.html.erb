<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br />
  <%= f.label :content %>
  <%= f.text_area :content %> <br />

  <h4>Categories:</h4>
  Select a category:
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br />

  Or create a new one:
  <%= f.fields_for :categories, @post.categories.build do |c| %>
    <%= c.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
