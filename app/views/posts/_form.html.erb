
<%= form_for post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %><br><br>
  <%= f.label "Categories" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>
  <%= f.label "Create a New Category" %>
  
  <%= f.fields_for :categories, post.categories.build do |category_fields| %>
    <%= category_fields.text_field :name %>
  <% end %>
  <br><br>  
  <%= f.submit %>
  <% end %>


