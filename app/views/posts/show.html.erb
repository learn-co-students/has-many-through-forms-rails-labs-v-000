<h1><%= @post.title %></h1>

<%= @post.content %><br><br>

Categories:
<ul>
  <% @post.categories.each do |category| %>
  <li><%= category.name %></li> 
  <% end %>
</ul><br>

Comments:
<% @post.comments.each do |comment| %>
  <p>
    <%= link_to comment.user.username, user_path(comment.user) %> says:
    <%= comment.content %>
  </p>
<% end %>

<%= form_for @comment do |f| %>
  Choose user: <br><br>
  <%= f.collection_select :user_id, User.all, :id, :username %><br><br>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br><br>
  <%= f.hidden_field :post_id %>
  <%= f.fields_for :user do |user_f| %>
    <%= user_f.label :username %><br>
    <%= user_f.text_field :username %><br>
  <% end %>
  <%= f.submit %>
<% end %>

