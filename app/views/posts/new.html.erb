<h1>New Post </h1>

<%= form_for @post do |f| %> 
	<%= f.label :"Title" %>
	<%= f.text_field :title %> 
	<br/>
	<h3>Categories</h3>
	<p>Choose a pre-existing category:</p>
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>
	<br/>
	<p>Create a New Category</p>
	<%= f.fields_for :categories, @post.categories.build do | cat_attr | %>
		<%= cat_attr.text_field :name %> 
	<% end %>
	<br/>
	<h3>Body</h3>
	<%= f.text_area :content, size:"50x20"%> 
	<br/><br/>
	<%= f.submit "Create Post" %> 
<% end %> 


