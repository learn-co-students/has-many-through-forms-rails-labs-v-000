<%= form_for(@post) do |f| %>
<h1>
  <%= f.label :title %>
  <%= f.text_field :title %>
</h1>

<p>
  <%= f.label :content %>
  <%= f.text_area :content %>
</p>


<p>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
</p>

<input type="text" id="post_categories_attributes_0_name" name="post[categories_attributes][0][name]" />
<%= f.submit %>
<% end %>
