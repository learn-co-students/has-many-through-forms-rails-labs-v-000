<h1>New Post</h1>

<%= form_for @post do |f| %> %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label 'Pick or create a category' %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
    <%= category_fields.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
