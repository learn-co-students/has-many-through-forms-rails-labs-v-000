<!-- # app/views/posts/index.html.erb -->

<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
      <%= post.content %>, <%= post.comments.count %>
      <%= "comment".pluralize(post.comments.count) %>,
      <%= post.users.uniq.count %> <%= "user".pluralize(post.users.uniq.count) %> commented.
    </li>
  
  <% end %>
</ul>
