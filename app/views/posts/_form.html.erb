<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %>
  <%= f.text_area :content %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, @post.categories.build do |c_f| %>
    <%= c_f.text_field :name %>
  <% end %><br>
  <%= f.submit %>
<% end %>
