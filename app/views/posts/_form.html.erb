<%= form_for post do |f| %>
<p><%= f.label :title %></p>
<p><%= f.text_field :title %></p>
<p><%= f.label :content %></p>
<p><%= f.text_area :content %></p>
<p>Categories:</p>
  <p><%= f.collection_check_boxes :category_ids, Category.all, :id, :name %></p>
  <p>Or create a new category:</p>
  <p>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  </p>
  <%= f.submit %>
<% end %>
