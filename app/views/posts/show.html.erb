<h1><%= @post.title %></h1>
<em><%= @post.content %></em>

<h3>Categories:</h3>
<% @post.categories.each do |c| %>
    <h4><%= c.name %></h4>
<% end %>

<hr />

<h2>Comments:</h2>
<% @post.comments.each do |c| %>
    <%= c.user.username %> says: <%= c.content %>
    <br /><br />
<% end %>

<h3>Add a Comment:</h3>
<%= render 'comment', post: @post %>

<hr />

<h2>Users:</h2>
<% @post.users_that_commented.each do |u| %>
    <p>
        <%= link_to u.username, user_path(u) %>
    </p>
<% end %>

<hr />








