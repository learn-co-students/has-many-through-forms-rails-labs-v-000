<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<h3>Categories:</h3>
<ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<h3>Comments:</h3>
<ul>
  <% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
    <% user.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
  <% end %>
</ul>
