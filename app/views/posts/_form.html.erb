<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br /><br />

  <%= f.label :content %>
  <%= f.text_field :content %><br /><br />

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: true} %><br /><br />

  <%= f.fields_for :categories do |category| %>
    <%= category.label :name %>
    <%= category.text_field :name %><br /><br />
  <% end %>

  <%= f.submit %>
<% end %>
