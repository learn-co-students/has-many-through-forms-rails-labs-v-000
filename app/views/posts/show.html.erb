<h1>Title: <%= @post.title %></h1>
<h4>Content: </h4>
<p><%= @post.content %></p>
<h4>Categories: </h4>
<p><% @post.categories.each do |category| %>
<%= category.name %>
<% end %></p>

<h4>Unique Commenters (users): </h4>
<% @post.users.uniq.each do |user| %>
<%= link_to user.username, user_path(user) %>
<% end %>

<h4>User Comments: </h4>
<% if @post.comments != nil %>
<% @post.comments.each do |comment| %>
 <p> <%= comment.user.username %> says: <%= comment.content %></p>

<% end %>
<% end %>
  
<h4>Create Comment:</h4>
<%= form_for :comment do |f| %>
  <%= f.label "New User:" %>
  <%= f.text_field :user_id %><br>
  <%= f.label "or choose existing User:" %>
  <%= f.collection_select :user_id, User.all, :id, :username, {include_blank: ''} %><br>
  <%= f.label "Content:" %>
  <%= f.text_field :content %><br>
  <%= f.submit id="Create Comment" %>
 
<% end %> 