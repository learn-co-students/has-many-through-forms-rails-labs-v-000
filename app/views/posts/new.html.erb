<h3> New Posts </h3>

<%= form_for @post do |f| %>

<%= f.label "Title" %>
<%= f.text_field :title %><br><br>

<%= f.label "Content" %>
<%= f.text_area :content %><br><br>
<%= f.label "Categories" %> <br><br>

<%= f.label "Select Existing Categories(s)" %><br><br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br><br>
<%= f.label "And/Or Enter New Category:" %> <br><br>

<%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
<%= categories_fields.text_field :name %>
<% end %>




<%= f.submit %>
<% end %>
